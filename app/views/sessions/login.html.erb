<div class="main">
  <div>
    <%= render './layouts/guest/header' %>
    <%= render 'layouts/alerts' %>
  </div>

  <main class="text-center">
    <h2>User Login</h2>
      <%= form_tag '/login' do %>
        <div class="row mb-3">
          <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
          <div class="col-sm-10">
            <%= email_field_tag :email, '', class: 'form-control', placeholder: 'Email here...', id: 'inputEmail' %>
          </div>
        </div>

        <div class="row mb-3">
          <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
          <div class="col-sm-10">
            <%= password_field_tag :password, '', class: 'form-control', placeholder: 'Password here...', id: 'inputPassword' %>
          </div>
        </div>

        <button type="submit" class="btn btn-success d-block w-100 mb-3">Login</button>
        <%= link_to 'Home', root_path, class: 'btn btn-primary d-block' %>
    <% end %>
  </main>
  <%= render './layouts/footer' %>
</div>
